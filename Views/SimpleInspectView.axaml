<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GUI_12_19.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GUI_12_19.Views.SimpleInspectView"
             x:DataType="vm:SimpleInspectViewModel">

    <Grid>
        <Border VerticalAlignment="Top" Height="40" Background="#252526">
            <TextBlock Text="{Binding StatusMessage}" Foreground="White" 
                       VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="16"/>
        </Border>

        <Grid Margin="0,40,0,0">
            
            <Grid IsVisible="{Binding IsMonitoring}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="40">
                    <TextBlock Text="左の映像を確認して撮影してください" Foreground="#CCCCCC" HorizontalAlignment="Center" FontSize="18"/>
                    
                    <Button Content="撮影" Command="{Binding CaptureCommand}" Width="220" Height="80" FontSize="28" FontWeight="Bold" 
                            Background="#007ACC" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                            CornerRadius="10"/>
                    
                    <Button Content="戻る" Command="{Binding BackCommand}" Width="120" Height="50" FontSize="18" 
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                </StackPanel>
            </Grid>

            <Grid IsVisible="{Binding IsReviewing}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="30">
                    
                    <Border Background="White" Padding="30,15" CornerRadius="8">
                        <TextBlock Text="この画像で保存しますか？" Foreground="Black" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </Border>
                    
                    <Button Content="はい" Command="{Binding ConfirmCaptureCommand}" Width="200" Height="70" 
                            Background="#1E8E3E" Foreground="White" FontSize="24" FontWeight="Bold"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" CornerRadius="8"/>
                            
                    <Button Content="いいえ (再撮影)" Command="{Binding RetakeCommand}" Width="200" Height="70" 
                            Background="#D32F2F" Foreground="White" FontSize="24" FontWeight="Bold"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" CornerRadius="8"/>
                </StackPanel>
            </Grid>

            <Grid IsVisible="{Binding IsNamingPrompt}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="30">
                    
                    <Border Background="White" Padding="30,15" CornerRadius="8">
                        <TextBlock Text="名前を付けて保存しますか？" Foreground="Black" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Orientation="Horizontal" Spacing="30">
                        <Button Content="はい" Command="{Binding YesNameCommand}" Width="160" Height="60" 
                                Background="#007ACC" Foreground="White" FontSize="22" FontWeight="Bold"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" CornerRadius="8"/>
                                
                        <Button Content="いいえ (日時で保存)" Command="{Binding NoNameCommand}" Width="240" Height="60" 
                                Background="#555555" Foreground="White" FontSize="22" FontWeight="Bold"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" CornerRadius="8"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid IsVisible="{Binding IsNamingInput}" Background="#AA000000">
                <Border Background="White" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
                    <StackPanel Orientation="Vertical" Spacing="20">
                        <TextBlock Text="保存名を入力" Foreground="Black" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="※半角英数字のみ" Foreground="#666666" FontSize="14" HorizontalAlignment="Center"/>
                        
                        <TextBox Text="{Binding InputName}" Watermark="例: Board001" FontSize="24" Padding="10" Margin="0,10"/>
                        
                        <Button Content="保存" Command="{Binding SaveWithNameCommand}" Width="150" Height="60" 
                                Background="#1E8E3E" Foreground="White" FontSize="24" FontWeight="Bold"
                                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" CornerRadius="8"/>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Grid>
</UserControl>
